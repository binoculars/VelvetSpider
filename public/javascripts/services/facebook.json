{
    "name": "Facebook",
    "id": "facebook",
    "icon": "social:post-facebook",
    "auth": {
        "type": "oauth",
        "version": "2.0",
        "baseSite": "https://graph.facebook.com/v2.2/",
        "authorizePath": "dialog/oauth",
        "accessTokenPath": "oauth/access_token",
        "scope": "email",
        "library": {
            "type": "passport",
            "name": "passport-facebook",
            "strategy": "Strategy"
        },
        "userModel": {
            "id": "String",
            "token": "String",
            "email": "String",
            "name": "String",
            "refreshTokenOrTokenSecret": "String"
        }
    },
    "endpoints": {
        "user": {
            "name": "user",
            "method": "GET",
            "resourceURL": "https://graph.facebook.com/v2.2/{user-id}",
            "description": ["Get basic information about a user."],
            "urlVariables": [
                {
                    "name": "user-id",
                    "replaces": "{user-id}",
                    "description": "User ID or \"me\"",
                    "data": {
                        "type": "String"
                    }
                }
            ],
            "parameters": [
                {
                    "name": "fields",
                    "description": "comma separated list of fields",
                    "optional": true,
                    "data": {
                        "type": "String",
                        "regex": "^.*$"
                    }
                }
            ]
        },
        "user/friends": {
            "name": "user/friends",
            "method": "GET",
            "resourceURL": "https://graph.facebook.com/v2.2/{user-id}/friends",
            "description": ["Get user's friends list"],
            "urlVariables": [
                {
                    "name": "user-id",
                    "replaces": "{user-id}",
                    "description": "User ID or \"me\"",
                    "data": {
                        "type": "String"
                    }
                }
            ],
            "parameters": []
        },
        "user/permissions": {
            "name": "user/permissions",
            "method": "GET",
            "resourceURL": "https://graph.facebook.com/v2.2/{user-id}/permissions",
            "description": ["Get user's permissions for the API"],
            "urlVariables": [
                {
                    "name": "user-id",
                    "replaces": "{user-id}",
                    "description": "User ID or \"me\"",
                    "data": {
                        "type": "String"
                    }
                }
            ],
            "parameters": []
        },
        "search": {
            "name": "search",
            "method": "GET",
            "resourceURL": "https://graph.facebook.com/search",
            "description": "You can search over many public objects in the social graph with the /search endpoint.",
            "docURL": "https://developers.facebook.com/docs/graph-api/using-graph-api/v2.2#search",
            "parameters": [
                {
                    "name": "q",
                    "description": "Query",
                    "optional": true,
                    "data": {
                        "type": "String"
                    }
                },
                {
                    "name": "type",
                    "description": "Search type",
                    "optional": true,
                    "data": {
                        "type": "String",
                        "regex": "^(user|page|event|group|place|location|placetopic|ad_.+)$"
                    }
                },
                {
                    "name": "center",
                    "description": "Coordinates used with place or location type.",
                    "optional": true,
                    "data": {
                        "type": "String"
                    }
                },
                {
                    "name": "distance",
                    "description": "Distance used with place or location type.",
                    "optional": true,
                    "data": {
                        "type": "String"
                    }
                }
            ]
        }
    }
}